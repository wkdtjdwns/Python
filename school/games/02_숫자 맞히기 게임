import random # 랜덤 함수를 만들기 위한 단계

answer = random.randint(1, 100) # answer 변수에 1 ~ 100 사이에 숫자 중 랜덤으로 하나를 입력함

for i in range(10):
  num = int(input('숫자를 맞추어 보세요>>> '))
  if num == answer:
      print('정답입니다!')
      break # 가장 마지막으로 반복된 반복문을 빠져나옴
  elif num < answer:
    print('up!')
  elif num > answer:
    print('down!')
