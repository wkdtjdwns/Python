# 우리반 학생을 저장 (1 ~ 10번)
# 방법 (1)
s1 = '김개똥'
s2 = '홍길동'
# 만약 학생이 100명이라면 ? => 100개의 변수 필요

# 그래서 하나의 묶음으로 보관함 => List (다른 언어는 array)

student = ['김개똥', '홍길동', 100] # 리스트의 다른 형태의 자료형도 보관가능 (다른 언어는 안됨)
print(student) # 전체 다 꺼내옴

print(student[0]) # '김개똥' 하나만 꺼내옴 / 리스트는 0 부터 시작 

print(student[2]) # 100 하나만 꺼내옴

student.append('이정환') # .append => 새로운 항목 추가
print(student[3])

student.remove('홍길동') # .remove => 특정 항목 제거 
print(student)

student.pop(1) # .pop => 1번째 항목 제거
print(student)
